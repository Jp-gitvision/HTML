    display: block;
  }
  
.horizontal-list li a {
    display: block;
    color: white;
    padding: 14px 16px; /* ajuste esthétiquement les différents titres (home, about, etc) de manière à ce que la bande violet soit assez large*/
    text-decoration: none; /* enlève le soulignement auto*/
  }
  
/* Ajout d'un style spécifique pour le survol */
.horizontal-list li:hover {
    background-color: white;
    color: purple;
  }
  
